@model List<Student>
<div class="container">
    <table class="table table-striped">
      <thead>
          <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Departmant</th>
              <th>Delete</th>
          </tr>
      </thead>
      <tbody>

          @foreach (var item in Model)
          {
              <form method="post" action="/Home/Delete/@item.Id">
                  <tr>
                      <td>@item.FirstName</td>
                      <td>@item.LastName</td>
                      <td>@item.Departmant</td>
                      <td><input type="submit" class="btn btn-danger" value="Delete" /></td>
                  </tr>
                   </form>
                  }
             
          </tbody>
    </table>

</div>